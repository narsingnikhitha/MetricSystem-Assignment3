@{
    ViewData["Title"] = "Home Page";
}

<div style="
    height: 100vh;
    background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.7)), url('/images/image.png');
    background-size: cover;
    background-position: center top;
    background-repeat: no-repeat;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    font-family: 'Italiana', serif;
">
    <div style="
        background-color: rgba(173, 216, 230, 0.85); /* Light blue with transparency */
