@{
    ViewData["Title"] = "Fahrenheit to Celsius";
}

<div class="container mt-5">
    <h2>Convert Fahrenheit to Celsius</h2>

    @if (ViewBag.Error != null)
    {
        <div class="text-danger fw-bold">@ViewBag.Error</div>
    }

    <form method="post" class="mt-3">
        <div class="mb-3">
            <label class="form-label">Fahrenheit Value</label>
            <input type="text" name="fahrenheit" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Celsius Value</label>
            <input type="text" class="form-control" value="@ViewBag.Celsius" readonly />
        </div>
        <button type="submit" class="btn btn-primary">Convert</button>
        <button type="reset" class="btn btn-secondary">Clear</button>
    </form>
</div>
